{
  "name": "velnora",
  "version": "0.0.0",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./build/velnora.d.ts",
      "import": "./build/velnora.js"
    },
    "./app": {
      "types": "./build/velnora.app.d.ts",
      "import": "./build/velnora.app.js"
    },
    "./core": {
      "types": "./meta/core.d.ts",
      "import": "./meta/core.js"
    },
    "./react": {
      "types": "./meta/react.d.ts",
      "import": "./meta/react.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./build/velnora.js",
  "types": "./build/velnora.d.ts",
  "bin": {
    "velnora-dev": "./bin/velnora-dev.ts"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "lint": "eslint .",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.build.json"
  },
  "dependencies": {
    "@velnora/core": "workspace:^",
    "@velnora/plugin-api": "workspace:^",
    "@velnora/schemas": "workspace:^",
    "eslint": "^9.39.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "devDependencies": {
    "type-fest": "^5.2.0"
  },
  "peerDependencies": {
    "@velnora/integrations-react": "*"
  },
  "peerDependenciesMeta": {
    "@velnora/integrations-react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=24"
  }
}
