{
  "name": "velnora",
  "version": "0.0.0-dev.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./build/velnora.d.ts",
      "import": "./build/velnora.js"
    },
    "./app": {
      "types": "./build/velnora.app.d.ts",
      "import": "./build/velnora.app.js"
    },
    "./core": {
      "types": "./meta/core.d.ts",
      "import": "./meta/core.js"
    },
    "./react": {
      "types": "./meta/react.d.ts",
      "import": "./meta/react.js"
    },
    "./router": {
      "types": "./meta/router.d.ts",
      "import": "./meta/router.js"
    },
    "./client": {
      "types": "./client.d.ts"
    },
    "./package.json": "./package.json"
  },
  "main": "./build/velnora.js",
  "types": "./build/velnora.d.ts",
  "bin": {
    "velnora": "./bin/velnora.js",
    "velnora-dev": "./bin/velnora-dev.ts"
  },
  "files": [
    "build",
    "meta",
    "packages"
  ],
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "lint": "eslint .",
    "prepublishOnly": "./scripts/ignore-dev.sh",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.build.json"
  },
  "dependencies": {
    "@velnora/core": "workspace:^",
    "@velnora/plugin-api": "workspace:^",
    "@velnora/router": "workspace:^",
    "@velnora/types": "workspace:^",
    "eslint": "^9.39.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "devDependencies": {
    "unbuild": "^3.6.1"
  },
  "engines": {
    "node": ">=24"
  }
}
