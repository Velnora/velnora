{
  "name": "@velnora/integrations-react",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./build/velnora.react.d.ts",
      "import": "./build/velnora.react.js"
