{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["vite/client", "@types/node"],
    "baseUrl": ".",
    "paths": {
      "@velnora/internal": ["libs/internal/src/main.ts"],
      "@velnora/utils": ["./libs/utils/src/main.ts"],
      "@velnora/commands": ["libs/helper/commands/src/main.ts"],
      "@velnora/cli-helper": ["packages/cli/src/main.ts"],
      "@velnora/types": ["./libs/types/src/main.ts"],
      "@velnora/host": ["./libs/host/src/main.ts"],
      "@velnora/kernel": ["./libs/kernel/src/main.ts"]
    }
  },
  "exclude": ["node_modules"]
}
