{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "velnora": ["libs/velnora/src/main.ts"],
      "velnora/app": ["libs/velnora/src/app.ts"],

      "@velnora/tooling": ["libs/tooling/src/main.ts"],
      "@velnora/tooling/*": ["libs/tooling/src/*"],

      "@velnora/cli": ["libs/cli/src/main.ts"],
      "@velnora/cli-helper": ["libs/helper/cli/src/main.ts"],

      "@velnora/integrations-nest": ["libs/integrations/nest/src/main.ts"],

      "@velnora/integrations-react": ["libs/integrations/react/src/main.ts"],
      "velnora/react": ["libs/integrations/react/src/client/main.ts"],
      "@velnora/integrations-react/client": ["libs/integrations/react/src/client/main.ts"],
      "@velnora/integrations-react/server": ["libs/integrations/react/src/server/main.ts"],

      "@velnora/core": ["libs/core/src/main.ts"],
      "velnora/core": ["libs/core/src/main.ts"],

      "@velnora/runtime-client": ["libs/runtime/client/src/main.ts"],
      "@velnora/runtime-server": ["libs/runtime/server/src/main.ts"],

      "@velnora/rpc": ["libs/rpc/src/main.ts"],
      "@velnora/plugin-api": ["libs/plugin-api/src/main.ts"],
      "@velnora/router": ["libs/router/src/main.ts"],
      "@velnora/schemas": ["libs/schemas/src/main.ts"],
      "@velnora/vite-integration": ["libs/vite/integration/src/main.ts"]
    }
  },
  "exclude": ["node_modules"]
}
