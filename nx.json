{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": { "cache": true, "dependsOn": ["^build"] },
    "lint": { "cache": true },
    "test": { "cache": true },
    "typecheck": { "cache": true }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": ["{workspaceRoot}/tsconfig.base.json", "{workspaceRoot}/pnpm-lock.yaml"]
  },
  "// velnora-tag-conventions": {
    "type": ["lib", "integration", "cli", "example", "service"],
    "scope": ["core", "schemas", "rpc", "runtime", "plugin-api", "vite", "integrations", "velnora"],
    "side": ["client", "server"],
    "engine": ["react", "vue", "angular"],
    "host": ["express", "bun"]
  }
}
